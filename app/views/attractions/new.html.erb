<%= form_for @attraction do |f| %>
  <div class="form-group">
    <%= f.label :name %> <br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :min_height %><br>
    <%= f.text_field :min_height, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :happiness_rating %><br>
    <%= f.text_field :happiness_rating, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :nausea_rating %><br>
    <%= f.text_field :nausea_rating, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :tickets %><br>
    <%= f.text_field :tickets, class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.label :admin, "Check box if you are a theme park owner" %>
      <%= f.check_box :admin %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary'%>
<% end %>

ill_in("attraction[name]", :with => "Haunted Mansion")
fill_in("attraction[min_height]", :with => "32")
fill_in("attraction[happiness_rating]", :with => "2")
fill_in("attraction[nausea_rating]", :with => "1")
fill_in("attraction[tickets]", :with => "4")
